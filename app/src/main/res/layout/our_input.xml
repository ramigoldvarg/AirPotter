            android:text="ך"
            android:textColor="@color/no_input"
            android:id="@+id/sendKafs"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="ף"
            android:textColor="@color/no_input"
            android:id="@+id/sendPeys"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layoutDirection="ltr">

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="ז"
            android:id="@+id/sendZain"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="ס"
            android:textColor="@color/no_input"
            android:id="@+id/sendSameh"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="ב"
            android:id="@+id/sendBet"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="ה"
            android:id="@+id/sendHey"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="נ"
            android:id="@+id/sendNun"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="מ"
            android:id="@+id/sendMem"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="צ"
            android:id="@+id/sendTzadik"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="ת"
            android:id="@+id/sendTaf"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="ץ"
            android:textColor="@color/no_input"
            android:id="@+id/sendTzadikss"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layoutDirection="rtl">

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="רווח"
            android:id="@+id/sendSpace"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="תובל"
            android:id="@+id/sendToval"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch_the_lights"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>


