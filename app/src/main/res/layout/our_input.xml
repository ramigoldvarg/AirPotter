    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layoutDirection="ltr">

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="'"
            android:textColor="@color/no_input"
            android:id="@+id/sendChupchik"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="ק"
            android:id="@+id/sendKuf"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="ר"
            android:id="@+id/sendReish"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="א"
            android:textColor="@color/no_input"
            android:id="@+id/sendAlef"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="ט"
            android:id="@+id/sendTet"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="ו"
            android:id="@+id/sendVav"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="ן"
            android:textColor="@color/no_input"
            android:id="@+id/sendNuns"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="ם"
            android:textColor="@color/no_input"
            android:id="@+id/sendMems"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="פ"
            android:id="@+id/sendPey"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layoutDirection="ltr">

        <Button
            android:layout_width="40dp"
