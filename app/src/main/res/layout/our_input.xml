            android:id="@+id/sendGimel"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="כ"
            android:id="@+id/sendKaf"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="ע"
            android:id="@+id/sendAin"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="י"
            android:id="@+id/sendYud"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="ח"
            android:id="@+id/sendHet"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="ל"
            android:id="@+id/sendLamed"/>

        <Button
            android:layout_width="40dp"
